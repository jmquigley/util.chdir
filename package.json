{
	"name": "util.chdir",
	"version": "0.0.7",
	"author": "jmquigley <jmquigley@outlook.com>",
	"description": "An implementation of pushd/popd for JavaScript.",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmquigley/util.chdir"
	},
	"bugs": {
		"url": "https://github.com/jmquigley/util.chdir/issues"
	},
	"engines": {
		"node": ">=7.4"
	},
	"dependencies": {
		"expand-home-dir": "0.0.3",
		"fs-extra": "^2.0.0",
		"util.timestamp": "0.0.6"
	},
	"devDependencies": {
		"ava": "^0.17.0",
		"coveralls": "^2.11.15",
		"nyc": "^10.1.2",
		"xo": "^0.17.1"
	},
	"main": "index.js",
	"scripts": {
		"postinstall": "node post.js",
		"test": "xo && ./node_modules/.bin/nyc ava --verbose",
		"report": "./node_modules/.bin/nyc report --reporter=html"
	},
	"xo": {
		"env": {
			"browser": true,
			"node": true,
			"es6": true
		},
		"global": [
			"window",
			"describe",
			"it",
			"JSON"
		],
		"rules": {
			"space-before-function-paren": "off",
			"unicorn/filename-case": [
				"error",
				{
					"case": "snakeCase"
				}
			],
			"arrow-parens": [
				"error",
				"as-needed"
			]
		}
	}
}
